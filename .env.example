# Backend Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Frontend Settings
NEXT_PUBLIC_API_URL=http://localhost:8000

# Storage Settings
STORAGE_ROOT=storage

# Similarity Settings
SIMILARITY_METHOD=tfidf  # Options: tfidf, embedding
DOC_SIMILARITY_THRESHOLD=0.85
PAGE_SIMILARITY_THRESHOLD=0.85
MIN_SIMILAR_PAGES=1

# Embedding Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Medical Content Settings
MIN_MEDICAL_CONFIDENCE=0.6

# Clustering Settings
CLUSTER_THRESHOLD=0.75
MIN_CLUSTER_SIZE=2

# OCR Settings
OCR_DPI=300
OCR_LANGUAGE=eng

# Processing Limits
MAX_BATCH_SIZE=100
MAX_FILE_SIZE=52428800  # 50MB in bytes